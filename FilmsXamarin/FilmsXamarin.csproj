    <None Remove="Fonts\Lobster-Regular.ttf" />
    <None Remove="Fonts\OleoScriptSwashCaps-Regular.ttf" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Fonts\Acme-Regular.ttf" />
